# Example environment variables for the Next.js web client.
# Copy this file to .env.local and adjust values for your target environment.

NEXT_PUBLIC_API_BASE_URL=https://api.thesara.space/api
NEXT_PUBLIC_API_URL=https://api.thesara.space/api
NEXT_PUBLIC_LOCAL_API_URL=http://127.0.0.1:8788/api
NEXT_PUBLIC_WEB_BASE_URL=https://thesara.space
NEXT_PUBLIC_APPS_HOST=https://apps.thesara.space

# Branding and quota defaults exposed to the client.
NEXT_PUBLIC_SITE_NAME=THESARA.SPACE
NEXT_PUBLIC_MAX_APPS_PER_USER=2
NEXT_PUBLIC_GOLD_MAX_APPS_PER_USER=10
NEXT_PUBLIC_MAX_ROOMS_PER_APP=10
NEXT_PUBLIC_MAX_PLAYERS_PER_ROOM=100

# Golden Book donations (optional, affects CTA visibility)
NEXT_PUBLIC_GOLDEN_BOOK_ENABLED=true
NEXT_PUBLIC_GOLDEN_BOOK_PAYMENT_LINK=https://buy.stripe.com/test_XXXX
NEXT_PUBLIC_GOLDEN_BOOK_PRICE_ID=price_xxx
NEXT_PUBLIC_GOLDEN_BOOK_PRODUCT_ID=prod_xxx
NEXT_PUBLIC_GOLDEN_BOOK_CAMPAIGN_ID=goldenbook-2025-q1
NEXT_PUBLIC_GOLDEN_BOOK_CAMPAIGN_START_MS=
NEXT_PUBLIC_GOLDEN_BOOK_CAMPAIGN_END_MS=
NEXT_PUBLIC_GOLDEN_BOOK_ALIAS_GRACE_MS=86400000

# Firebase client SDK configuration (required in production).
NEXT_PUBLIC_FIREBASE_API_KEY=your-firebase-api-key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-firebase-project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-firebase-project
NEXT_PUBLIC_FIREBASE_APP_ID=1:1234567890:web:abcdef123456
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-firebase-project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=1234567890

# Optional local-only helpers.
# NEXT_PUBLIC_ENABLE_DEV_PARENT_FIREBASE=1
# NEXT_PUBLIC_STORAGE_NS_MODE=user_app

# AdSense slot identifiers (fill when you have unit IDs or test slots)
NEXT_PUBLIC_ADS_SLOT_PLAY_TOP=
NEXT_PUBLIC_ADS_SLOT_PLAY_BOTTOM=
NEXT_PUBLIC_ADS_SLOT_APP_HEADER=
NEXT_PUBLIC_ADS_SLOT_APP_INLINE=
NEXT_PUBLIC_ADS_SLOT_HOME_RAIL_LEFT=
NEXT_PUBLIC_ADS_SLOT_HOME_RAIL_RIGHT=
NEXT_PUBLIC_ADS_SLOT_HOME_GRID_INLINE=
NEXT_PUBLIC_ADS_SLOT_HOME_FEED_FOOTER=
NEXT_PUBLIC_ADS_SLOT_MARKETPLACE_GRID_INLINE=
