# Example Nginx config for https://thesara.space
# Copy to /etc/nginx/sites-available/thesara.space and symlink from sites-enabled.

server {
  listen 443 ssl http2;
  server_name thesara.space;

  # Enforce security headers
  add_header Strict-Transport-Security "max-age=31536000; includeSubDomains; preload" always;
  add_header Referrer-Policy "no-referrer" always;
  # Allow uploads up to 5 MB
  client_max_body_size 5M;

  location / {
    proxy_pass http://127.0.0.1:3000;
    proxy_http_version 1.1;
    proxy_set_header Connection "";
    proxy_set_header Host $host;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto $scheme;
    proxy_redirect off;
  }

  # Proxy build artifacts and uploads to API (Fastify)
  # These must bypass Next.js and hit the API directly
  location ^~ /builds/ {
    proxy_pass http://127.0.0.1:8788$request_uri;
    proxy_http_version 1.1;
    proxy_set_header Connection "";
    proxy_set_header Host $host;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto $scheme;
    proxy_redirect off;
  }

  location ^~ /review/builds/ {
    proxy_pass http://127.0.0.1:8788$request_uri;
    proxy_http_version 1.1;
    proxy_set_header Connection "";
    proxy_set_header Host $host;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto $scheme;
    proxy_redirect off;
  }

  location ^~ /uploads/ {
    proxy_pass http://127.0.0.1:8788$request_uri;
    proxy_http_version 1.1;
    proxy_set_header Connection "";
    proxy_set_header Host $host;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto $scheme;
    proxy_redirect off;
  }

  # Rooms API (legacy + v1) proxied to Fastify
  location ^~ /rooms/ {
    proxy_pass http://127.0.0.1:8788$request_uri;
    proxy_http_version 1.1;
    proxy_set_header Connection "";
    proxy_set_header Host $host;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto $scheme;
    proxy_redirect off;
  }

  location ^~ /_next/static/ {
    expires 30d;
    access_log off;
  }
}

server {
  listen 80;
  server_name thesara.space;

  location ^~ /.well-known/acme-challenge/ { root /var/www/html; }
  return 301 https://$host$request_uri;
}
