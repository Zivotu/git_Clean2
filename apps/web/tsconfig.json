{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["DOM", "DOM.Iterable", "ES2022"],

    // âš™ï¸ Glavne postavke
    "allowJs": false,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,

    // âœ… Ovo rijeÅ¡ava sve import greÅ¡ke
    "module": "esnext",
    "moduleResolution": "bundler", // âœ… promijenjeno sa "NodeNext"
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",

    // ğŸ“¦ Alias putanje
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@/lib/*": ["./lib/*"],
      "@loopyway/entitlements": ["../../packages/entitlements/index.d.ts"]
    },

    // ğŸ§  Next plugin
    "plugins": [{ "name": "next" }],

    // ğŸ“˜ Tipovi
    "types": ["node", "react", "react-dom"],

    // ğŸ”„ BrÅ¾e ponovno buildanje
    "incremental": true
  },

  // ğŸ“‚ UkljuÄeni izvori
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],

  // ğŸš« IskljuÄeni izvori (radi performansi i testova)
  "exclude": [
    "node_modules",
    "build",
    "vitest.config.ts",
    "_app_api_disabled",
    "tests",
    "**/*.test.ts",
    "**/*.spec.ts",
    "playwright.config.ts"
  ]
}
